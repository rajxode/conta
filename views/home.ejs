<html>

    <head>
        <!-- page title -->
        <title>
            <%= title %>
        </title>

        <!-- favicon -->
        <link rel="icon" type="image/png" href="/images/icon.png" >
        
        <!-- fontawesome link to use some links online -->
        <script
        src="https://kit.fontawesome.com/9c250245e3.js"
        crossorigin="anonymous"
        ></script>

        <!-- bootstrap link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
                rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
                crossorigin="anonymous">

        <!-- css file -->
        <link rel="stylesheet" type="text/css" href="/css/home.css">

    </head>

    <body>

        <!-- main container of whole page -->
        <div class="w-100 h-100 d-flex flex-column">

            <!-- navbar of page at top of screen  -->
            <nav class="navbar bg-primary shadow" data-bs-theme="dark">
                <div class="container-fluid">
                    <!-- link to homepage -->
                    <a class="navbar-brand" href="/">
                        <!-- image inside the navbar -->
                        <img src="/images/icon.png" alt="Logo" width="30" height="24" 
                                class="d-inline-block align-text-top">
                        <!-- brand name inside the navbar -->
                        Contact List
                    </a>
                </div>
            </nav>

            <!-- contact list container -->
            <main class="contactList d-flex justify-content-between 
                            align-items-center overflow-hidden">

                <!-- container of input form  -->
                <div class="inputForm bg-primary-subtle rounded shadow h-100">

                    <!-- section heading -->
                    <h1 class="text-center text-secondary">Enter Details</h1>


                    <!-- to get user data  -->
                    <form action="/create" method="post">

                        <!-- for name -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" name="name" class="form-control" 
                                    id="name" placeholder="Enter Name" required>
                        </div>

                        <!-- for phone number -->
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone No.</label>
                            <input type="number" name="number" class="form-control" 
                                    id="phone" placeholder="Enter Phone no." required>
                        </div>
                        
                        <!-- submit button -->
                        <button type="submit" class="btn btn-primary">Add Contact</button>

                    </form>
                </div>


                <!-- list of added contacts -->
                <div class="listContainer h-100 bg-primary-subtle 
                            rounded shadow d-flex flex-column">
                    
                    <div>

                        <!-- header of page -->
                        <nav class="navbar text-bg-primary rounded" data-bs-theme="dark">
                            <div class="container-fluid">
                                <span class="navbar-brand mb-0 h1">
                                    Your Contact list
                                </span>
                            </div>
                        </nav>

                    </div>


                    <!-- list container -->
                    <div class="mt-2 overflow-y-scroll p-1">
                        <!-- ordered list of contacts -->
                        <ol class="list-group list-group-numbered">

                            <!-- looping over each contact stored inside the database -->
                            <% for (let i of contact_list) { %>

                                <!-- show each contact one by one -->
                                <li class="list-group-item rounded d-flex justify-content-between align-items-start my-1">

                                    <!-- name of contact holder -->
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold text-primary"><%= i.name %></div>
                                        
                                        <!-- contact number -->
                                        <%= i.number %>
                                    </div>
                                    

                                    <!-- a delete icon to delete the contact -->
                                    <div class="badge">
                                        <!-- query parem to return value of number  -->
                                        <a class="text-decoration-none link-danger fs-4" href="/delete-contact/?id=<%=i._id%>">  
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>

                                </li>
                            
                            <% } %>
                        </ol>    

                    </div>

                </div>

            </main>

        </div>
        

        <!-- bootstrap link -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
                integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" 
                crossorigin="anonymous"></script>
    </body>
</html>