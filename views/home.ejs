<html>

    <head>
        
        <title>
            <%= title %>
        </title>
        <link rel="icon" type="image/png" href="/images/icon.png" >
        <script
        src="https://kit.fontawesome.com/9c250245e3.js"
        crossorigin="anonymous"
        ></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
                rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
                crossorigin="anonymous">

        <link rel="stylesheet" type="text/css" href="/css/home.css">
    </head>

    <body>
        <div class="w-100 h-100 d-flex flex-column">

            <nav class="navbar bg-primary shadow" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <img src="/images/icon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                        Contact List
                    </a>
                </div>
            </nav>

            <main class="contactList d-flex justify-content-between align-items-center overflow-hidden">

                <div class="inputForm bg-primary-subtle rounded shadow h-100">

                    <h1 class="text-center text-secondary">Enter Details</h1>

                    <!-- to get user data  -->
                    <form action="/create" method="post">

                        <!-- for name and phone -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="Enter Name">
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone No.</label>
                            <input type="number" name="number" class="form-control" id="phone" placeholder="Enter Phone no.">
                        </div>
        
                        <button type="submit" class="btn btn-primary">Add Contact</button>
                    </form>
                </div>

                <div class="listContainer h-100 bg-primary-subtle rounded shadow d-flex flex-column">
                    
                    <div>
                        <nav class="navbar text-bg-primary rounded" data-bs-theme="dark">
                            <div class="container-fluid">
                                <span class="navbar-brand mb-0 h1">Your Contact list</span>
                            </div>
                        </nav>
                    </div>

                    <div class="mt-2 overflow-y-scroll p-1">
                        <ol class="list-group list-group-numbered">
                            <% for (let i of contact_list) { %>
                                <li class="list-group-item rounded d-flex justify-content-between align-items-start my-1">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold text-primary"><%= i.name %></div>
                                        
                                        <%= i.number %>
                                    </div>
                                    
                                    <div class="badge">
                                        <!-- query parem to return value of number  -->
                                        <a class="text-decoration-none link-danger fs-4" href="/delete-contact/?id=<%=i._id%>">  
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>
                                </li>
                            
                            <% } %>
                        </ol>    
                    </div>

                        
                </div>

            </main>

        </div>
        

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script type="text/javascript" src=""></script>
    </body>
</html>